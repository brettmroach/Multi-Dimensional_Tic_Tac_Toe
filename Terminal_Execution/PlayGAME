
# Uses ttt_source.sh to play the game


source ./Terminal_Execution/ttt_source.sh
echo "game: $GAME"

make -C "$dir/TTTfiles" $GAME

clear

"$dir/TTTfiles/$GAME" $size

echo "\n  Hit \"Enter\" to close the program"
read EXIT

make -C "$dir"/TTTfiles clean

/bin/rm -f "$dir"/Terminal_Execution/ttt_source.sh "$dir"/Terminal_Execution/TTT.terminal

exit
